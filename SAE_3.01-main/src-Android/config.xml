<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sash1ro.SAE3"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>SmartParking Metz</name>
    <description>Une solution intelligente pour faciliter la mobilit√© urbaine</description>
    <author email="dev.sash1ro@icloud.com" href="">
        SmartParking Metz dev team
    </author>

    <content src="index.html" />
  
    <access origin="*" />
    <allow-navigation href="*" />

    <platform name="android">
    <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
    <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
    <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
    <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
    <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
    <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />
    </platform>


    
    <preference name="Scheme" value="http" />
    <preference name="Hostname" value="localhost" />
    <preference name="AndroidInsecureFileModeEnabled" value="true" />
    <preference name="MixedContentMode" value="0" />


    <plugin name="cordova-plugin-geolocation" source="npm" />


</widget>